<%= @surgery.title %>
<%= @surgery.room %>
<% @surgery.doctors.each do |doctor| %>
  <%= doctor.name %>
<% end %>
<br>
<h2>Other surgeries happening this day of the week:</h2>
  <% @surgery.day_of_surgery.each do |title| %>
    <%= title %>
  <% end %>
<br>
<%= form_tag "/surgeries/#{@surgery.id}" do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %>
  <%= submit_tag "Submit" %>
<% end %>
